{
  "name": "obsidian-deep-work-theme",
  "version": "0.1.0",
  "description": "A theme for Obsidian inspired by the modern GitHub colors",
  "main": "index.js",
  "scripts": {
    "format:dev": "prettier --config .prettierrc --write \"{src}/**/*.{css,scss}\"",
    "format:build": "prettier --config .prettierrc --write obsidian.css",
    "dev": "sass --watch --no-source-map src/obsidian.scss design-vault/.obsidian/themes/Deep\\ Work.css",
    "build": "sass --no-source-map src/obsidian.scss obsidian.css && npm run format:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikbrunner/obsidian-deep-work-theme.git"
  },
  "keywords": [
    "obsidian",
    "theme"
  ],
  "author": "github.com/nikbrunner",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/nikbrunner/obsidian-deep-work-theme/issues"
  },
  "homepage": "https://github.com/nikbrunner/obsidian-deep-work-theme#readme",
  "dependencies": {
    "prettier": "2.3.2",
    "sass": "1.37.5"
  }
}
